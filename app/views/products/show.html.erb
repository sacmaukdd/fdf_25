<div class="show-image">
  <%= link_to product_path(@product) do %>
    <%= image_tag @product.picture %>
  <% end %>
</div>
<div class="product-right">
  <%= link_to product_path(@product) do %>
    <%= @product.name %>
  <% end %>
<p><%= @product.price %> <%= t "dollar" %></p>
<%= @product.description %>
</div>
