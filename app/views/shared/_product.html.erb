<% products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td class="index-product"><%= image_tag product.picture %></td>
    <td><%= product.price %></td>
    <td><%= product.classify %></td>
    <td><%= link_to t("edit"), edit_admin_product_path(product) %></td>
    <td>
      <%= link_to t("delete"), admin_product_path(product), method: :delete,
        data: {confirm: t("sure")}%>
    </td>
  </tr>
<% end %>
