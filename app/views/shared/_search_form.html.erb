<%= search_form_for @q, url: search_products_path,
  html: {method: :post} do |f| %>

  <%= f.label :name_product %>
  <%= f.text_field :name_or_category_name_cont %><br /><br />

  <%= f.label :classify %>
  <%= f.select :classify_cont,
    options_for_select([[("")],[t("food"),t("food")],[t("drink"),t("drink")]]) %>
  <br />

  <%= f.label :price_gteq, t("price_between") %>
  <%= f.number_field :price_gteq %><br />

  <%= f.label :price_lteq, t("and") %><br />
  <%= f.number_field :price_lteq %><br />

  <%= f.submit %>
<% end %>
